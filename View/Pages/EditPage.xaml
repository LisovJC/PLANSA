<Page x:Class="PLANSA.View.Pages.EditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PLANSA.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" 
      d:DesignWidth="1700"
      Title="EditPage">

    <Grid   Background="#323232">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition  Height="80"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Background="White"
                CornerRadius="30"
                Margin="10"
                Width="1680"
                Grid.ColumnSpan="3"
                HorizontalAlignment="Left">

            <Label  HorizontalAlignment="Center"
                    Foreground="Black"
                    FontSize="40"
                    FontFamily="Bahnschrift"
                    VerticalAlignment="Center"
                    Content="ЗАГОЛОВОК"/>
        </Border>

        <Border Grid.Column="0"
                Grid.Row="1"
                CornerRadius="30"
                Grid.ColumnSpan="2"
                Width="830"
                HorizontalAlignment="Left"
                Margin="10,10,0,10"
                Background="White">

            <StackPanel Orientation="Vertical">
                <Border Background="#323232"
                        Height="70"
                        CornerRadius="30"
                        Margin="10">
                    
                </Border>

                <Border Background="#323232"
                        Height="280"
                        CornerRadius="30"
                        Margin="10">
                </Border>
            </StackPanel>
        </Border>

        <Border Grid.Column="1"
                Grid.Row="1"
                CornerRadius="30"
                Grid.ColumnSpan="2"
                Width="830"
                HorizontalAlignment="Right"
                Margin="10,10,0,10"
                Background="White">

            <StackPanel Orientation="Vertical">
                <Border Background="#323232"
                        Height="70"
                        CornerRadius="30"
                        Margin="10">

                </Border>

                <Border Background="#323232"
                        Height="280"
                        CornerRadius="30"
                        Margin="10">
                </Border>
            </StackPanel>
        </Border>

        <Border Grid.Column="0"
                Grid.Row="2"
                CornerRadius="30"
                Grid.ColumnSpan="2"
                Width="830"
                HorizontalAlignment="Left"
                Margin="10,10,0,10"
                Background="White">

            <StackPanel Orientation="Vertical">
                <Border Background="#323232"
                        Height="70"
                        CornerRadius="30"
                        Margin="10">

                </Border>

                <Border Background="#323232"
                        Height="280"
                        CornerRadius="30"
                        Margin="10">
                </Border>
            </StackPanel>
        </Border>

        <Border Grid.Column="1"
                Grid.Row="2"
                CornerRadius="30"
                Grid.ColumnSpan="2"
                Width="830"
                HorizontalAlignment="Right"
                Margin="10,10,0,10"
                Background="White">

            <StackPanel Orientation="Vertical">
                <Border Background="#323232"
                        Height="70"
                        CornerRadius="30"
                        Margin="10">

                </Border>

                <Border Background="#323232"
                        Height="280"
                        CornerRadius="30"
                        Margin="10">
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Page>
