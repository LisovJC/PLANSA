<Page x:Class="PLANSA.View.Pages.EditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PLANSA.View.Pages" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="900" 
      d:DesignWidth="1700"
      Title="EditPage">

    <Grid   Background="#323232">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition  Height="80"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Background="White"
                CornerRadius="30"
                Margin="10"
                Width="1680"
                Grid.ColumnSpan="3"
                HorizontalAlignment="Left">

            <Label  HorizontalAlignment="Center"
                    Foreground="Black"
                    FontSize="40"
                    FontFamily="Bahnschrift"
                    VerticalAlignment="Center"
                    Content="ЗАГОЛОВОК"/>
        </Border>

        <Border Grid.Column="0"
                Grid.Row="1"
                CornerRadius="30"
                Grid.ColumnSpan="2"
                Width="780"
                HorizontalAlignment="Left"
                Margin="10,10,0,10"
                Background="White">

            <StackPanel Orientation="Vertical">
                <Border Background="#323232"
                        Height="70"
                        CornerRadius="30"
                        Margin="10">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                FlowDirection="RightToLeft">
                        <Label  HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="White"
                                        FontSize="40"
                                        FontFamily="Bahnschrift"
                                        Content="СОДЕРЖАНИЕ ПЛАНА"/>

                        <materialDesign:PackIcon    Kind="TextSubject"
                                                    Width="60"
                                                    Height="60"
                                                    Foreground="White"
                                                    VerticalAlignment="Center"/>
                    </StackPanel>

                </Border>

                <Border Background="#323232"
                        Height="280"
                        CornerRadius="30"
                        Margin="10">
                </Border>
            </StackPanel>
        </Border>

        <Border Grid.Column="1"
                Grid.Row="1"
                CornerRadius="30"
                Grid.ColumnSpan="2"
                Width="780"
                HorizontalAlignment="Right"
                Margin="10,10,10,10"
                Background="White">

            <StackPanel Orientation="Vertical">
                <Border Background="#323232"
                        Height="70"
                        CornerRadius="30"
                        Margin="10">

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                FlowDirection="RightToLeft">
                        <Label  HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="White"
                                        FontSize="40"
                                        FontFamily="Bahnschrift"
                                        Content="ПРИКРЕПЛЕННЫЕ ФАЙЛЫ"/>

                        <materialDesign:PackIcon    Kind="Files"
                                                    Width="50"
                                                    Height="50"
                                                    Foreground="White"
                                                    VerticalAlignment="Center"/>
                    </StackPanel>

                </Border>

                <Border Background="#323232"
                        Height="280"
                        CornerRadius="30"
                        Margin="10">
                </Border>
            </StackPanel>
        </Border>

        <Border Grid.Column="0"
                Grid.Row="2"
                CornerRadius="30"
                Grid.ColumnSpan="2"
                Width="780"
                HorizontalAlignment="Left"
                Margin="10,10,0,10"
                Background="White">

            <StackPanel Orientation="Vertical">
                <Border Background="#323232"
                        Height="70"
                        CornerRadius="30"
                        Margin="10">

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                FlowDirection="RightToLeft">
                        <Label  HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="White"
                                        FontSize="40"
                                        FontFamily="Bahnschrift"
                                        Content="ПОДЗАДАЧИ ПЛАНА"/>

                        <materialDesign:PackIcon    Kind="CheckboxesMarked"
                                                    Width="60"
                                                    Height="60"
                                                    Foreground="White"
                                                    VerticalAlignment="Center"/>
                    </StackPanel>

                </Border>

                <Border Background="#323232"
                        Height="280"
                        CornerRadius="30"
                        Margin="10">
                </Border>
            </StackPanel>
        </Border>

        <Border Grid.Column="1"
                Grid.Row="2"
                CornerRadius="30"
                Grid.ColumnSpan="2"
                Width="780"
                HorizontalAlignment="Right"
                Margin="10,10,10,10"
                Background="White">

            <StackPanel Orientation="Vertical">
                <Border Background="#323232"
                        Height="70"
                        CornerRadius="30"
                        Margin="10">

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                FlowDirection="RightToLeft">
                        <Label  HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="White"
                                        FontSize="40"
                                        FontFamily="Bahnschrift"
                                        Content="ИНФОРМАЦИЯ О ПЛАНЕ"/>

                        <materialDesign:PackIcon    Kind="Information"
                                                    Width="60"
                                                    Height="60"
                                                    Foreground="White"
                                                    VerticalAlignment="Center"/>
                    </StackPanel>

                </Border>

                <Border Background="#323232"
                        Height="280"
                        CornerRadius="30"
                        Margin="10">
                </Border>
            </StackPanel>
        </Border>

        <Border Grid.Row="1"
                Grid.RowSpan="2"
                Grid.Column="1"
                Background="White"
                Width="90"
                CornerRadius="30"
                Margin="10">

            <StackPanel Orientation="Vertical">
                <Button     materialDesign:ButtonAssist.CornerRadius="50"
                                        Height="70"
                                        Width="70"
                                        Background="#0D7377"
                                        BorderThickness="0"
                                        Margin="0,10,0,0"
                                        Foreground="White"
                                        Padding="0"
                                        Command="{Binding RightPlan}"
                                        IsEnabled="{Binding Clip_1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <materialDesign:PackIcon    Kind="Check"
                                                Width="50"
                                                Height="50"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                HorizontalContentAlignment="Center"
                                                VerticalContentAlignment="Center"/>
                </Button>

                <Button     materialDesign:ButtonAssist.CornerRadius="50"
                                        Height="70"
                                        Width="70"
                                        Background="#0D7377"
                                        BorderThickness="0"
                                        Margin="0,10,0,0"
                                        Foreground="White"
                                        Padding="0"
                                        Command="{Binding RightPlan}"
                                        IsEnabled="{Binding Clip_1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <materialDesign:PackIcon    Kind="Paperclip"
                                                Width="50"
                                                Height="50"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                HorizontalContentAlignment="Center"
                                                VerticalContentAlignment="Center"/>
                </Button>

                <Button     materialDesign:ButtonAssist.CornerRadius="50"
                                        Height="70"
                                        Width="70"
                                        Background="#0D7377"
                                        BorderThickness="0"
                                        Margin="0,10,0,0"
                                        Foreground="White"
                                        Padding="0"
                                        Command="{Binding RightPlan}"
                                        IsEnabled="{Binding Clip_1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <materialDesign:PackIcon    Kind="Plus"
                                                Width="50"
                                                Height="50"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                HorizontalContentAlignment="Center"
                                                VerticalContentAlignment="Center"/>
                </Button>
            </StackPanel>
            
        </Border>
    </Grid>
</Page>
